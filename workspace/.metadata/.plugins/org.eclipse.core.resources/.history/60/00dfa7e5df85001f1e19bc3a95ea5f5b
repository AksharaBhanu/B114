package day08;

import java.util.Scanner;

public class Demo7 {
//ask the user to press a number and print the language 
/*
 * 1. English
 * 2. Hindi
 * 3. kannada
 * 4. invalid input
 */
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Plz select the language:\n1.English \n2.Hindi \n3.kannada ");
		int number=sc.nextInt();
		sc.close();
		
		if(number==1)
		{
			System.out.println("You Selected English");
		}
		else if(number==2)
		{
			System.out.println("You Selected Hindi");
		}
		else if(number==3)
		{
			System.out.println("You Selected Kannada");
		}
		else
		{
			System.out.println("Invalid input");
		}
	}

}
